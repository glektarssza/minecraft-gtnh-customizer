{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "id": "root",
    "name": "Root Configuration",
    "description": "Root configuration for the project.",
    "enabled": true,
    "dictionaries": [
        "en-ca",
        "en-common-misspellings",
        "public-licenses",
        "computing-acronyms",
        "game-development",
        "gaming-terms",
        "networking-terms",
        "softwareTerms",
        "coding-compound-terms",
        "git",
        "fonts",
        "filetypes",
        "java",
        "shell",
        "bash"
    ],
    "import": ["./.cspell/configs/project-dictionary.json"],
    "enableGlobDot": true,
    "useGitignore": true,
    "gitignoreRoot": ["."],
    "caseSensitive": false,
    "ignorePaths": [
        ".git",
        "./gradlew*",
        "./spotless.importorder",
        "./formatter.xml"
    ],
    "loadDefaultConfiguration": true,
    "unknownWords": "report-all",
    "readonly": true
}
